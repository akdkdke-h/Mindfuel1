<body>

    <div class="container">
        <h1>FocusBreak</h1>
        <div class="timer-display" id="display">25:00</div>
        
        <div class="buttons">
            <button class="btn-work" onclick="startTimer(25)">Ders</button>
            <button class="btn-break" onclick="startTimer(5)">Mola</button>
            <button class="btn-stop" onclick="resetTimer()">Dur</button>
        </div>

        <div class="quote-container">
            <p id="quote">"Başlamak için mükemmel olmana gerek yok, ama mükemmel olmak için başlamana gerek var."</p>
        </div>
    </div>

    <script>
        let countdown;
        let timeLeft;
        const display = document.getElementById('display');
        const quoteDisplay = document.getElementById('quote');

        const quotes = [
            "Bugünün emeği, yarının zenginliğidir.",
            "Odaklan, başaracaksın!",
            "Küçük adımlar büyük sonuçlar doğurur.",
            "Zihnini dinlendir, hedefine odaklan."
        ];

        function startTimer(minutes) {
            clearInterval(countdown);
            timeLeft = minutes * 60;
            updateDisplay();
            
            countdown = setInterval(() => {
                timeLeft--;
                updateDisplay();
                if (timeLeft <= 0) {
                    clearInterval(countdown);
                    alert("Süre bitti! Harika iş çıkardın.");
                    changeQuote();
                }
            }, 1000);
        }

        function resetTimer() {
            clearInterval(countdown);
            display.textContent = "25:00";
        }

        function updateDisplay() {
            const mins = Math.floor(timeLeft / 60);
            const secs = timeLeft % 60;
            display.textContent = `${mins < 10 ? '0' : ''}${mins}:${secs < 10 ? '0' : ''}${secs}`;
        }

        function changeQuote() {
            const rand = Math.floor(Math.random() * quotes.length);
            quoteDisplay.textContent = `"${quotes[rand]}"`;
        }
    </script>
</body>
